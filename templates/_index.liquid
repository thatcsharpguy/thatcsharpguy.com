{% extends 'base' %}

{% block content %}
<div class="pure-g">
    {% for post in paginator %}
    <div class="listed-post pure-u-1">
        {% if post.author %}
        <div class="post-meta">{{ post.author  }} · {{ post.date_time | date:"MMMM dd, yyyy" }}</div>
        {% else %}
        <div class="post-meta">{{ site.default_author  }} · {{ post.date_time | date:"MMMM dd, yyyy" }}</div>
        {% endif %}
        <h1 class="post-title">
            <a class="post-link" href="{{ post.url }}">{{ post.title }}</a>
        </h1>
        <div class="post-excerpt">{{ post.summary }}</div>
        <a class="post-link" href="{{ post.url }}">Leer más &#x2192;</a>
    </div>
    {% endfor %}
    <div class="listed-post pure-u-1">
        <div class="pure-g paginator-footer">
            <div class="pure-u-1-3">
                {% if paginator.has_previous_page %}
                <a href="{{ paginator.previous_page_url }}">Página {{ paginator.previous_page }}</a>
                {% endif %}
            </div>
            <div class="pure-u-1-3"></div>
            <div class="pure-u-1-3 align-right">
                {% if paginator.has_next_page %}
                <a href="{{ paginator.next_page_url }}">Página {{ paginator.next_page }}</a>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}